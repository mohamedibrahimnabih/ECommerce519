@model ProductVM

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit new Product</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                @* <input type="hidden" name="id" value="@Model.Id"> *@
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input class="form-control" name="Name" value="@Model.Product!.Name">
                </div>
                <div class="mb-3">
                    <label for="Img" class="form-label">Img</label>
                    <input type="file" class="form-control" id="Img" name="Img" accept="image/*" onchange="previewImage(event)" value="@Model.Product.MainImg">
                </div>

                <div class="mb-3">
                    <img id="preview"
                         src="~/images/@Model.Product.MainImg"
                         alt="Current Image"
                         style="max-width: 200px; border:1px solid #ccc; padding:5px; border-radius:10px;" />
                </div>

                <div class="mb-3">
                    <label for="SubImgs" class="form-label">Sub Imgs</label>
                    <input type="file" class="form-control" id="SubImgs" name="SubImgs" accept="image/*" multiple>
                </div>

                @if(Model.Product.productSubImages.Any())
                {
                    foreach(var item in Model.Product.productSubImages)
                    {
                        <div class="mb-3" style="position:relative; display: inline-block">
                            <img id="preview"
                                 src="~/images/product_images/@item.Img"
                                 alt="Current Image"
                                 style="width: 150px; border:1px solid #ccc; padding:5px; border-radius:10px;" />

                                <a href="/Admin/Product/DeleteSubImg?productId=@Model.Product.Id&Img=@item.Img" id="addButtonColor" class="btn btn-sm btn-danger"
                                style="position: absolute; top: 5px; right: 5px">X</a>
                        </div>
                    }
                }

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Leave a description here" style="height: 100px" name="Description">@Model.Product.Description</textarea>
                        <label for="description">You Description Here...</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Price" class="form-label">Price</label>
                    <input class="form-control" name="Price" value="@Model.Product.Price">
                </div>
                <div class="mb-3">
                    <label for="Discount" class="form-label">Discount</label>
                    <input class="form-control" name="Discount" value="@Model.Product.Discount">
                </div>
                <div class="mb-3">
                    <label for="Quantity" class="form-label">Quantity</label>
                    <input class="form-control" name="Quantity" value="@Model.Product.Quantity">
                </div>
                <div class="mb-3">
                    <label for="Color" class="form-label">Color</label>

                    <div id="colorContainer">
                        @foreach(var item in Model.Product.ProductColors)
                        {
                            <div class="mb-2 d-flex align-item-center">
                                <input type="color" class="form-control form-control-color" name="Colors" value="@item.Color">
                                <button type="Button" class="btn btn-danger btn-sm removeColor">X</button>
                            </div>
                        }
                    </div>

                    <button type="button" id="addButtonColor" class="btn btn-outline-primary">+ Add New Color</button>
                </div>
                <div class="mb-3">
                    <label for="CategoryId" class="form-label">Category</label>
                    @* <input class="form-control" name="CategoryId"> *@
                    <select name="CategoryId" class="form-select">
                        @foreach (var item in Model.Categories)
                        {
                            @if(item.Id == Model.Product.CategoryId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="BrandId" class="form-label">Brand</label>
                    @* <input class="form-control" name="BrandId"> *@
                    <select name="BrandId" class="form-select">
                        @foreach (var item in Model.Brands)
                        {
                            @if (item.Id == Model.Product.BrandId)
                            {
                                <option value="@item.Id" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="Status" class="form-select">
                        @if (Model.Product.Status)
                        {
                            <option value="true" selected>Active</option>
                            <option value="false">InActive</option>
                        }
                        else
                        {
                            <option value="true">Active</option>
                            <option value="false" selected>InActive</option>
                        }
                        
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("preview");

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result; // الصورة الجديدة
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

</script>

<script>
    const conateiner = document.getElementById('colorContainer');
    const addBtn = document.getElementById('addButtonColor');

    addBtn.addEventListener('click', () => {
        var colorRow = document.createElement('div');

        colorRow.className = 'mb-2 d-flex align-item-center'
        colorRow.innerHTML = `
            <input type="color" class="form-control form-control-color" name="Colors">
            <button type="Button" class="btn btn-danger btn-sm removeColor">X</button>
        `;

        conateiner.appendChild(colorRow);
    });

    conateiner.addEventListener('click', (e) => {
        if(e.target.classList.contains('removeColor')) {
            e.target.parentElement.remove();
        }
    })
</script>