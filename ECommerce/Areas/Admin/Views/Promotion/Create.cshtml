@model Promotion

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Create new Promotion</h2>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-12">
            <form method="post">
                <div class="mb-3">
                    <label for="Code" class="form-label">Code</label>
                    <input class="form-control" asp-for="Code">
                    <span class="text-danger" asp-validation-for="@Model.Code"></span>
                </div>
                <div class="mb-3">
                    <label for="Discount" class="form-label">Discount</label>
                    <input type="number" class="form-control" asp-for="Discount">
                    <span class="text-danger" asp-validation-for="@Model.Discount"></span>
                </div>
                <div class="mb-3">
                    <label for="ValidTo" class="form-label">ValidTo</label>
                    <input type="datetime" class="form-control" asp-for="ValidTo">
                    <span class="text-danger" asp-validation-for="@Model.ValidTo"></span>
                </div>
                <div class="mb-3">
                    <label for="ProductId" class="form-label">Product</label>
                    <select name="ProductId" class="form-select">
                        @foreach (var item in ViewBag.products)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="@Model.ProductId"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
